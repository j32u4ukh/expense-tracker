<div class="container mt-5">
    {{!-- 類別下拉選單 --}}
    {{> category}}

    {{!-- 總金額 --}}
    <div id="displayTotalAmount">
        <div>總金額:</div>
        <div id="totalAmount">{{totalAmount}}</div>
    </div>

    {{!-- 支出列表 --}}
    <section>
        <div class="record">
            <div class="content">
                <div class="category_img">
                    <i class="fa-solid fa-utensils"></i>
                </div>                
                <div class="summary">
                    <span class="title">午餐</span><br/>
                    <span class="date">2024/02/17</span>
                </div>
                <div class="amount">197</div>
            </div>
            <button class="btn edit_btn">修改</button>
            <button class="btn delete_btn">刪除</button>
        </div>
        
        <div class="record">
            <div class="content">
                <div class="category_img">
                    <i class="fa-solid fa-van-shuttle"></i>
                </div>                
                <div class="summary">
                    <span class="title">捷運</span><br/>
                    <span class="date">2024/02/17</span>
                </div>
                <div class="amount">30</div>
            </div>
            <button class="btn edit_btn">修改</button>
            <button class="btn delete_btn">刪除</button>
        </div>
    </section>

    <form action="">
        <button id="new" class="btn new-btn">
            新增支出
        </button>
    </form>
</div>